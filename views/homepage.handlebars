<!-- Loop over each object in the projects array -->
<!-- did listings instead of projects bc that follows the model and routes -->
<!-- not sure if we need the project stuff but we can edit the models/seeds accordingly -->
{{#each listings as |listing| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/project/{{listing.id}}">{{listing.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function --> 
      <span class="dollar-amount">{{listing.price}}</span>
      needed!
    </p>
    <p>Created by {{listing.user.name}} on {{listing.upload_date}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{listing.description}}
    </p>
  </div>
</div>
{{/each}}


