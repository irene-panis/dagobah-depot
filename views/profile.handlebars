<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>What would you like to sell?:</h3>

    <form class="form new-project-form" action="/listings/post" method="post">
      <div class="form-group">
        <label for="project-name">Item Name:</label>
        <input class="form-input" type="text" id="project-name" name="name" />
      </div>
      <div class="form-group">
        <label for="project-funding">Selling Price ($):</label>
        <input class="form-input" type="number" id="project-funding" name="price" />
      </div>
      <div class="form-group">
        <label for="project-desc">Description of Item:</label>
        <textarea class="form-input" id="project-desc" name="description"></textarea>
      </div>
      <div class="form-group">
        <label for="project-cat">Category:</label>
        <select id="cat-dropdown" name="category_id">
          <option value="1">Clothing</option>
          <option value="2">Games</option>
          <option value="3">Movies/TV</option>
          <option value="4">Books/Comics</option>
        </select>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post Item</button>
      </div>
    </form>
  </div>

  {{#if listings.length}}
  <div class="col-md-6 project-list">
    <h3>Posted Items:</h3>

    {{#each listings as |listing|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/listing/{{listing.id}}">{{listing.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{listing.id}}">Delete Item</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>