<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dagobah Depot</title>
    <link href="https://fonts.cdnfonts.com/css/starkiller" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">            
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/jass.css">
    <link rel="stylesheet" href="/css/slider.css">
    <link rel="stylesheet" href="/css/dropdown.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/category.css">
</head>

<body class="light">
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
      <h1>
        <button class="no-button" onclick="theForce()"><img src="/images/Dagobah.png" alt="Dagobah" width="100" height="100"></button>
        <a href="/">Dagobah Depot</a>
      </h1>
        <!-- Conditionally render login or logout links -->
<div class="nav" id="myTopNav">
        <label for="toggle" class="navi">&#9776;</label>
        <input type="checkbox" id="toggle"/>
        <div class="menu">
          {{#if logged_in}}
            <a href="javascript:void(0);" class="icon" onclick="myFunction()">
            <i class="fa fa-bars"></i></a>
            <a href="/profile">Profile</a> 
            <a href="/category">Categories</a> 
            <a href="/checkout">Checkout</a> 
            <button class="no-button" id="logout">Logout</button>
          {{else}}
            <a href="/login">Login</a> 
            <a href="/signup">Sign Up</a>
          {{/if}}
        </div>
    </div>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
      {{#each js}}
        <script src="/js/{{this}}"></script>
      {{/each}}
    </main>
    <footer>
<div class="toggle-switch">
        <p>Dark Side</p>
        <span>
            <label class="switch">
                <input id="theme-switch" type="checkbox">
                <span class="slider round"></span>
            </label>
        </span>
        <p>Light Side</p>
    </div>
    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  {{!-- darkmode switch --}}
  <script src="/js/darkmode.js"></script>
  <script src="/js/navbar.js"></script>
</body>

</html>
