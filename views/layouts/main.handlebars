<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dagobah Depot</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/jass.css">
    <link rel="stylesheet" href="css/slider.css">
</head>

<body class="light">
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
      <h1>
        <button class="no-button" onclick="theForce()"><img src="/images/Dagobah.jpg" alt="Dagobah" width="100" height="100"></button>
        <a href="/">Dagobah Depot</a>
      </h1>
      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/profile">Profile</a> |
        <a href="/checkout">Checkout</a> |
        <button class="no-button" id="logout">Logout</button>
        {{else}}
        <a href="/login">Login</a> |
        <a href="/signup">Sign Up</a> |
        {{/if}}
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
      {{#each js}}
        <script src="/js/{{this}}"></script>
      {{/each}}
    </main>
    <footer>
<div class="toggle-switch">
        <p>Dark Side</p>
        <span>
            <label class="switch">
                <input id="theme-switch" type="checkbox">
                <span class="slider round"></span>
            </label>
        </span>
        <p>Light Side</p>
    </div>
    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  {{!-- darkmode switch --}}
  <script src="js/darkmode.js"></script>

</body>

</html>
